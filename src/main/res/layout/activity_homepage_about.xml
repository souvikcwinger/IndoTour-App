<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_editor_absoluteY="25dp">
    <TextView
        android:id="@+id/textview"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editText"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textMultiLine"
        android:text="About INDIA TOURISM ..."
        android:textColor="#000f28"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="serif"
        android:inputType="textMultiLine"
        android:text="INDIA TOURISM is basically made for helping those people who want to take a tour in the famous cities across INDIA. Each place is described in short with images. Many resources are available in internet, People can get more information about the place from there. The main purpose of making this app is to guide the people who like to travel or make plans for a tour of INDIA. "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp"
        android:fontFamily="serif"
        android:text="Made By:
                      SOUVIK CHAKI,
                      SHUBHAM NANDAN,
                      MD NASHIRUDDIN PARVEZ,
                      BIJOY KRISHNA SAHA."
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold" />
</RelativeLayout>